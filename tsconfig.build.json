{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "declaration": true,
        "sourceMap": false,
        "removeComments": false,
        "esModuleInterop": false,
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transformer-esm",
                "after": true
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "eslint.config.js",
        "vitest.config.js"
    ]
}
